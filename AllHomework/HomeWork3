// 5.)

let sentenceNameIncludes_Body = sentenceName.includes(`Body`);
console.log(`sentenceName -> ${sentenceName}`);
console.log(`is ${sentenceName} includes body : ${sentenceNameIncludes_Body}`);

// 6.)

let charAt49 = sentenceName.charAt(49);
console.log(`sentenceName -> ${sentenceName}`);
console.log(`Character present at index-49 -> ${charAt49}`);

//7.)

let sentenceNameEndsWith_L = sentenceName.endsWith(`L`);
console.log(`is ${sentenceName} ends with 'L' -> : ${sentenceNameEndsWith_L}`);

